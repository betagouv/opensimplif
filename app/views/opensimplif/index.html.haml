#backoffice_index
  #pref_list_menu
    = render partial: 'backoffice/dossiers/pref_list'

  .default_data_block.default_visible
    .row.show-block#new_dossiers
      .header
        .col-lg-8.col-md-8.col-sm-8.col-xs-8.title
          .carret-right
          .carret-down
          Mes simplifications
        .col-lg-2.col-md-2.col-sm-2.col-xs-2.count
          = t('common.simplification_count', count: @smart_listings[:mes_dossiers].count)
        %a{href: '/commencer/'+@facade_data_view.procedure.path}
          #new-procedure.col-lg-2.col-md-2.col-sm-2.col-xs-2.action
            Nouvelle

      .body
        = smart_listing_render :mes_dossiers

  .default_data_block.default_visible
    .row.show-block#follow_dossiers
      .header
        .col-lg-10.col-md-10.col-sm-10.col-xs-10.title
          .carret-right
          .carret-down
          Les simplifications que je suis
        .col-lg-2.col-md-2.col-sm-2.col-xs-2.count
          = t('common.simplification_count', count: @facade_data_view.suivi_total)
      .body
        = smart_listing_render :follow_dossiers


  .default_data_block.default_visible
    .row.show-block#all_dossiers
      .header
        .col-lg-10.col-md-10.col-sm-10.col-xs-10.title
          .carret-right
          .carret-down
          Toutes les simplifications
        .col-lg-2.col-md-2.col-sm-2.col-xs-2.count
          = t('common.simplification_count', count: @facade_data_view.all_state_total)
      .body
        = smart_listing_render :all_state_dossiers
